<h1>Create A New Order!</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@order) do |f| %>
      <%= render 'shared/error_messages', object: @order %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :price %>
      <%= f.text_field :price %>
	  
      <%= f.label :customer_id %>
      <%= f.text_field :customer_id %>

      <%= f.submit "Create my order", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
