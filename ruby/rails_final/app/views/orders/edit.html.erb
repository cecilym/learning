<h1>Edit Your Orders</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@order) do |f| %>
      <%= render 'shared/error_messages', object: @order %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :price %>
      <%= f.text_field :price %>
	  
	  <p>And change who's making the order!</p>
	  
      <%= f.label :customer_id %>
      <%= f.text_field :customer_id %>
	  
	  
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
