<!DOCTYPE html>
<html>
<head>
  <title>TodoList</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% unless flash.empty? %>
	<div id="flash_container">
		<ul>
			<% flash.each do |key, value| %>
				<li class="alert-#{key}"><%= value %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= yield %>

</body>
</html>
